<div style="padding: 0.5rem;"></div>

<div class="container-fluid">
  <!--begin::Row-->
  <div class="row g-4">
    <!--begin::Col-->
    <div class="col-md-12">
      <!--begin::Accordion-->
      <div class="card card-primary card-outline mb-4">
        <!--begin::Header-->
        <div class="card-header">
          <div class="card-title">Editing product ID: <%= @admin_product.id %></div>
        </div>
        <!--end::Header-->
        <!--begin::Body-->
        <div class="card-body">
          <%= render "form", admin_product: @admin_product, type: "update" %>
          <hr>
          <%= link_to "Show this product", [:admin, @admin_product], class: "btn btn-primary" %>
          <%= link_to "Back to products", admin_products_path, class: "btn btn btn-warning" %>
          <hr>
          <%= button_to "Destroy this product", [:admin, @admin_product], method: :delete, class: "btn btn-danger" %>
        </div>
        <!--end::Body-->
      </div>
    </div>
  </div>
</div>
