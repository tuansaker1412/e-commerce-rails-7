<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Welcome to EcomM</h1>
      <p class="lead text-muted">
        Your one-stop shop for all your e-commerce needs!
      </p>
      <p>
        <a href="javascript:void(0)" class="btn btn-info my-2" style="color: #ffffff;">Shop Now</a>
      </p>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @main_categories.each do |category| %>
        <div class="col">
          <div class="card shadow-sm h-100 ">
            <%= category.image.present? ? image_tag(category.image, class: "img-fluid mx-auto rounded-1") : image_tag("https://via.placeholder.com/255", class: "img-fluid") %>

            <div class="card-body d-flex flex-column">
              <div class="mt-auto">
                <p class="card-text text-center"><%= category.name %></p>
                <div class="d-flex justify-content-center align-items-center">
                  <div class="btn-group">
<!--                    <button type="button" class="btn btn-sm btn-outline-secondary">Go Now</button>-->
                    <%= link_to "Go Now", category_path(category), class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
