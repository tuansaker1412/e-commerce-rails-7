<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce Rails 7</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= render "shared/admin/head" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="layout-fixed sidebar-expand-lg bg-body-tertiary app-loaded sidebar-open">
    <div class="app-wrapper">
      <%= render "shared/admin/topbar" %>
      <%= render "shared/admin/sidenav" %>

      <main class="app-main">
        <%= yield %>
      </main>
      <%= render "shared/admin/footer" %>
    </div>
    <%= render "shared/admin/scripts" %>
  </body>
</html>
